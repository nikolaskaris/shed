    <!-- Image -->
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @photos[0].image.url(:medium), class: "img-responsive" if @photos.length > 0 %>
      </div>
    </div>

    <br>

    <!-- Main Info -->
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@gear.user), class: "img-circle avatar-large" %><br><br>
            <%= @gear.user.fullname %>
          </div>

          <div class="col-md-9">
            <h4><%= @gear.listing_name %></h4>
            <%= @gear.location %>

            <div class="row text-center row-space-1">
              <div class="col-sm-4">
                <i class="fa fa-bicycle fa-2x"></i>
              </div>
              <div class="col-sm-4">
                <i class="fa fa-balance-scale fa-2x"></i>
              </div>
              <div class="col-sm-4">
                <i class="fa fa-anchor fa-2x"></i>
              </div>
            </div>

            <div class="row text-center">
              <div class="col-sm-4">
                <%= @gear.activity %>
              </div>
              <div class="col-sm-4">
                <%= @gear.gear_type %>
              </div>
              <div class="col-sm-4">
                <%= @gear.size %>
              </div>
            </div>
          </div>    
        </div>
      </div>
      <div class="col-md-4">
        <!-- Reservation Form -->
        <% if current_user != @gear.user %>
          <%= render 'reservations/form' %>
        <% end %>
      </div>
    </div>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h2>About This Listing</h2>
        <p><%= @gear.summary %></p>
      </div>
    </div>

    <!-- Carousel -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <% if @photos %>
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
          <% end %>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% if @photos %>
              <% @photos.each do |photo| %>
              <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                <%= image_tag photo.image.url(:medium) %>
              </div>
              <% end %>
            <% end %>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>

    <br>
    <hr>

    <!-- Reviews --> 
    <div class="row">
      <div class="col-md-12">
        <h3>Reviews <span id="average_rating"></span></h3>
        <div class="container">
          <div>
            <%= render 'reviews/form' if @booked && !@hasReview %>
          </div>
          <div>
            <%= render 'reviews/list' %>
          </div>
        </div>
      </div> 
    </div>

    <!-- Google Map -->
    <div class="row">
      <div class="col-md-12">
        

        <div id="map"></div>

        <style>
          #map {
            width: 100%;
            height: 400px;
            background-color: grey;
          }
        </style>

        <script>
          function initMap() {
            var gearLocation = {lat: <%= @gear.latitude %>, lng: <%= @gear.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 14,
              center: gearLocation
            });
            var marker = new google.maps.Marker({
              position: gearLocation,
              map: map,
            });
          }
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC18iSndZV_8QnbWOareqa9PUwJ6fPrTvQ&callback=initMap">
        </script>

      </div>
    </div>

    <!-- Close by Rooms -->
    <h3>Nearby</h3>
    <div class="row">
      <% for gear in @gear.nearbys(10) %>

        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag gear.photos[0].image.url(:medium) %>
            </div>
            <div class="panel-body">
              <%= link_to gear.listing_name, gear %><br>
              (<%= gear.distance.round(2) %> miles away)
            </div>
          </div>
        </div>

      <% end %>
    </div>

  </div>
</div>

<script type="text/javascript">
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @gear.average_rating %>
  });
</script> 