<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listing", gears_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Rentals", your_rentals_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">
        
        <% @gears.each do |gear| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag gear.photos[0].image.url(:thumb) if gear.photos.length > 0 %>
            </div>
            <div class="col-md-7">
              <h4><%= gear.listing_name %></h4>
            </div> 
            <div class="col-md-3 right">
              <%= link_to "Update", listing_gear_path(gear), class: "btn btn-primary" %>
            </div> 
          </div>
          <hr>
        <% end %>

      </div>
    </div>
  </div>
</div>