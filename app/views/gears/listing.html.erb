<div class="row">
  <div class="col-md-3">
    <%= render 'gear_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listing
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @gear do |f| %>

              <div class="row">
                <div class="col-md-3 select">
                  <div class="form-group">
                    <label>Activity</label>
                    <%= f.select :activity, [["Surfing", "Surfing"], ["Skiing", "Skiing"], ["Biking", "Biking"]],
                    id: "activity", prompt: "Activity", class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-3 select">
                  <div class="form-group">
                    <label>Gear Type</label>
                    <%= f.select :gear_type, [["Surfboard", "Surfboard"], ["Skis", "Skis"], ["Mountain Bike", 
                    "Mountain Bike"], ["Road Bike", "Road Bike"], ["Other", "Other"]], id: "gear_type", 
                    prompt: "Gear Type", class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="form-group">
                    <label>Size</label>
                    <%= f.text_field :size, placeholder: "Size",  id: "gear_type", prompt: "Select...", class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-3 select">
                  <div class="form-group">
                    <label>Booking Type</label>
                    <%= f.select :instant, Gear.instants.map {|key, value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Save", class: "btn btn-primary" %>
              </div>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>