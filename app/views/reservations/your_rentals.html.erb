<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listing", gears_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Rentals", your_rentals_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Rentals
      </div>
      <div class="panel-body">
        
        <% @rentals.each do |rental| %>
          <div class="row">
            <div class="col-md-2">
              <%= rental.start_date.strftime('%v') %>
            </div>
            <div class="col-md-6">
              <%= link_to gear_path(rental.gear) do %>
                <%= image_tag rental.gear.photos[0].image.url(:thumb) if rental.gear.photos.length > 0 %>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(rental.gear.user) do %>
                <%= image_tag avatar_url(rental.gear.user), class: "img-circle avatar-medium" %>
              <% end %>
            </div>
            <div class="col-md-2 right">
              <h4>$<%= rental.total %></h4>
            </div>
          </div>
          <hr>
        <% end %>

      </div>
    </div>
  </div>
</div>