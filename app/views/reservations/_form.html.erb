<%= form_for ([@gear, @gear.reservations.new]) do |f| %>
  
  <div class="row">
    <div class="col-md-6">
      <label>Pick Up</label>
      <%= f.text_field :start_date, readonly: 'true', placeholder: 'Start Date', class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <label>Drop Off</label>
      <%= f.text_field :end_date, readonly: 'true', placeholder: 'End Date', class: 'form-control', disabled: 'true' %>
    </div>
  </div>

  <%= f.hidden_field :gear_id, value: @gear.id %>
  <%= f.hidden_field :price, value: @gear.price %>
  <%= f.hidden_field :total, id: 'reservation_total' %>

  <div id="preview" style="display: none">
    <h4><span id="message"></span></h4>

    <table class="reservation-table">
      <tbody>
        <tr>
          <td>Day(s)</td>
          <td><span id="reservation_days"></span></td>
        </tr>
        <tr>
          <td>Total</td>
          <td><span id="reservation_sum"></span></td>
        </tr>
      </tbody>
    </table>
  </div>

    <br>
  <%= f.submit "Book Now", class: "btn btn-primary" %>

<% end %>

<script type="text/javascript">

  function unavailable(date) {
    dmy = date.getDate() + "-" + (date.getMonth()+1) + "-" + date.getFullYear();
    return [$.inArray(dmy, unavailableDates) == -1]
  }

  $(function() {

    unavailableDates = [];

    $.ajax({
      url: '/preload', 
      data: {'gear_id': <%= @gear.id %>},
      dataType: 'json', 
      success: function(data) {

        $.each(data, function(arrID, arrValue) {
          for(var d= new Date(arrValue.start_date); d <= new Date(arrValue.end_date); d.setDate(d.getDate() + 1)) {
            unavailableDates.push($.datepicker.formatDate('d-m-yy', d));
          }
        });

        $('#reservation_start_date').datepicker({
          dateFormat: 'dd-mm-yy',
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: unavailable,
          onSelect: function(selected) {
            $('#reservation_end_date').datepicker("option", "minDate", selected);
            $('#reservation_end_date').attr('disabled', false);
          }
        });

        $('#reservation_end_date').datepicker({
          dateFormat: 'dd-mm-yy',
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: unavailable,
          onSelect: function(selected) {
            $('#reservation_start_date').datepicker("option", "maxDate", selected);
          }
        });
      }
    });



  });
</script>